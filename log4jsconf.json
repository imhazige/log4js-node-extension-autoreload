{
  "appenders": {
    "cheese": {
      "type": "file",
      "filename": "${process.cwd()}/logs/app.log",
      "maxLogSize": 10485760,
      "backups": 10
    },
    "out": {
      "type": "stdout"
    }
  },
  "categories": {
    "default": { "appenders": ["cheese", "out"], "level": "debug" }
  }
}
